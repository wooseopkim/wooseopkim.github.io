{
  "name": "website",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check && tsc --noEmit",
    "check:ts": "astro check",
    "check:astro": "astro check",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write . && eslint . --fix"
  },
  "dependencies": {
    "astro": "^2.4.1",
    "posthog-js": "^1.63.2"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.0.7",
    "@fontsource/ibm-plex-mono": "^5.0.2",
    "@types/eslint": "^8.40.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-astro": "^0.27.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "modern-normalize": "^2.0.0",
    "postcss-preset-env": "^8.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.10.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "**/*.{astro}": [
      "npm run check:astro"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "npm run check:ts"
    ],
    "**/*.{js,jsx,ts,tsx,astro}": [
      "npm run format"
    ]
  }
}
